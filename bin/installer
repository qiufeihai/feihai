#!/bin/bash
#安装软件

#help
help() {
cat << EOF
  Usage:     $0           [options]
  options:                              
      all           install all soft      
      git           install git           
      node          install node          
      chromium      install chromium     
      ssr           install ssr         
      python3       install_python3
      autojump      install_autojump
      smplayer      install_smplayer   
      ansible       install_ansible 
EOF
}

start() {
  echo "###################  $1 start  ########################"
}

end() {
  echo "###################  $1 end  ########################"
}
  

#install git
install_git() {
  start install_git
 # apt-get install git
  end install_git
}

#install node
install_node() {
  start install_node
  __install_nvm 
  # 安装LTS版node 
  source ~/.nvm/nvm.sh install --lts
  end install_node
}

__install_nvm() {
  start install_nvm
  wget -qO- https://raw.sevencdn.com/creationix/nvm/v0.33.8/install.sh | bash
  command -v nvm
  end install_nvm
}

#install chromium
install_chromium() {
  start install_chromium
  sudo add-apt-repository ppa:chromium-daily
  sudo apt-get update
  sudo apt-get install chromium-browser
  end install_chromium
}

#install_ssr翻墙用的ssr客户端
install_ssr() {
  start inistall_ssr
  sudo wget -P $HOME/.local/bin/ https://raw.sevencdn.com/the0demiurge/CharlesScripts/master/charles/bin/ssr
  sudo chown $USERNAME:$USERNAME $HOME/.local/bin/ssr
  sudo chmod u+x $HOME/.local/bin/ssr
  end install_ssr
}

#install_python3
install_python3() {
  start install_python3
  sudo add-apt-repository ppa:jonathonf/python-3.6
  sudo apt-get update
  sudo apt-get install python3.6
  if [ -e /usr/bin/python ]; then
    sudo rm -f /usr/bin/python
    sudo ln -s /usr/bin/python3.6m python
  fi 
  end install_python3
}

#inistall_autojump
inistall_autojump() {
  start inistall_autojump
  sudo apt-get install autojump
  echo ". /usr/share/autojump/autojump.sh" > ~/.bashrc
  end inistall_autojump
}

# install_smplayer 播放器
install_smplayer() {
  start install_smplayer
  sudo add-apt-repository ppa:rvm/smplayer 
  sudo apt-get update 
  sudo apt-get install smplayer smplayer-themes smplayer-skins 
  end install_smplayer
}
# install_ansible
install_ansible() {
  sudo apt-get update
  sudo apt-get install software-properties-common
  sudo apt-add-repository ppa:ansible/ansible
  sudo apt-get update
  sudo apt-get install ansible
  ansible --version
}

case "$1" in
  git) install_git ;;

  node) install_node ;;

  chromium) install_chromium ;;

  ssr) install_ssr ;;

  python3) install_python3 ;;

  autojump) inistall_autojump ;;

  smplayer) install_smplayer ;;
   
  ansible)  install_ansible ;;
  *) help
esac
